<% @attractions.each do |attraction|%>
<p>Name: <%= attraction.name %></p>
<p>Tickets: <%= attraction.tickets %></p>
<p>Nausea Rating: <%= attraction.nausea_rating %></p>
<p>Happines Rating: <%= attraction.happiness_rating %></p>
<p>Minimum Height: <%= attraction.min_height %></p>
  <% if @user.admin %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction)%>
  <%else%>
    <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %><br>
  <%end%>
<%end%>


<% if @user.admin %>
  <%= link_to "New Attraction", new_attraction_path%>
<% end %>
